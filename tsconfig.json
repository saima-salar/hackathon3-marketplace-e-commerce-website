{
  "compilerOptions": {
    "baseUrl": ".", // Set the root directory
    "target": "ESNext", // Use ESNext for the latest ECMAScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Include necessary libraries
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit JavaScript files (Next.js handles this)
    "esModuleInterop": true, // Enable compatibility with ES modules
    "module": "ESNext", // Use ESNext modules
    "moduleResolution": "Node", // Use Node.js-style module resolution
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensure each file can be transpiled independently
    "jsx": "preserve", // Preserve JSX syntax for Next.js
    "incremental": true, // Enable incremental compilation
    "forceConsistentCasingInFileNames": true, // Ensure consistent file name casing
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "types/*": [
        "./types/*"
      ]
    }, // Ensure the `types` directory is correctly resolved
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Include Next.js type definitions
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript JSX files
    "types/**/*.ts", // Make sure TypeScript includes the types directory
    "pages/**/*.tsx" // Also include your pages
    ,
    ".next/types/**/*.ts",
    "src",
    "types",
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules directory
  ]
}
